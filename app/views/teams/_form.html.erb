<%= form_for(@team) do |f| %>
    <div class="box-content">
      <table style="width: 100%; padding: 20px">
        <tr>
          <td>
            <%= f.label :name %>
          </td>
          <td width="100%">
            <div class="field">
              <%= f.text_field :name, autofocus: true, placeholder: t('views.team_name') %>
            </div>
          </td>
          <td>
            <div class="input-button">
              <%= f.submit %>
            </div>
          </td>
        </tr>
      </table>
      <% if @team.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@team.errors.count, "error") %></h2>

            <ul>
              <% @team.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
    </div>
<% end %>
