<h1>Editing Team</h1>

<%= form_for(@team, url: team_path, html: { method: :put }) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>


    <div>
        <%= Team.human_attribute_name("users") %><br />
        <% @team_users.each do |a| %>
            <p>
                <%= User.find(a.user_id).email %>
                <%= collection_select(UsersTeam, :user_team_role, UsersTeam::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>
                <%= link_to 'remove',  team_remove_user_path(@team, a.user_id),  method: :post %></p>
            </p>
        <% end %>
        <%= will_paginate @team_users, :param_name => 'teamUserPage' %>
    </div>

    <div class="actions">
        <%= f.submit "Save" %>
    </div>
<% end %>

