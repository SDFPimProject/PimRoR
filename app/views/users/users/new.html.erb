<% provide(:title, "Nutzer neu") %>

<div class="content-wrapper user-new">
  <div class="content-box">
    <div class="box-header">Neuer Nutzer</div>
    <%= form_for(@user, url: user_index_path) do |f| %>
        <table class="user-new-table">
          <tr>
            <td>
              <%= f.label :name %>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name, placeholder: :first_name %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :last_name, placeholder: :last_name %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :email %>
            </td>
            <td>
              <div class="field">
                <%= f.email_field :email, placeholder: :email %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.email_field :email_confirmation, placeholder: :email_confirmation %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :password %>
            </td>
            <td>
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: :password_confirmation %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :birthday %>
            </td>
            <td colspan="2">
              <div class="field">
                <%= f.date_field :birthday, placeholder: :birthday%>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :street_and_nr %>
            </td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :street_and_nr, placeholder: :street_and_nr %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :zip_code %>
            </td>
            <td colspan="2">
              <div class="field">
                <%= f.number_field :zip_code, placeholder: :zip_code %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :state %>
            </td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :state, placeholder: :state %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :country_name %>
            </td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :country_name, placeholder: :country_name %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :locality %>
            </td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :locality, placeholder: :locality %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label :role %>
            </td>
            <td><div class="field">
              <%= f.collection_select(:role, User::ROLES, :to_s, lambda { |i| i.to_s.humanize }) %>
            </div></td>
          </tr>
        </table>
        <div class="box-content row">

          <div class="field input-button">
            <%= f.submit t('views.create') %>
          </div>
        </div>
    <% end %>
  </div>
</div>
</div>

