<div class="user-search-list-wrapper  invite">
  <ul class="user-serach-list layout_for_invites">
    <% if users.any? %>
      <% users.each do |user| %>
          <% if user.id != current_user.id %>
          <li class="user-search-list-item" data-userid="<%= user.id%>" data-username="<%= user.first_name + " " + user.last_name %>">
            <span class="user-status">
              <% if user.connection_id != '' %>
                <div class="online"></div>
              <% else %>
                  <div class="offline"></div>
              <% end %>
            </span>
            <%= user.first_name + " " + user.last_name %>
          </li>
          <% end %>
      <% end %>
    <% else %>
        <li class="user-search-list-item-no-result">
          <%= t('views.no_results') %>
        </li>
    <% end %>
  </ul>
</div>
