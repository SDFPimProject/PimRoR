<div class="dashboard">
  <div class="content-box">
    <div class="box-header">Edit User</div>
    <%= form_for(@user, url: user_path, html: {method: :put}) do |f| %>
        <% @user.errors.each do |error| %>
          <%= error %> 
        <% end %>



        <div class="box-content row">
          <div class="login-field">
            <%= f.email_field :email, autofocus: true, placeholder: "email" %>
          </div>
          <div class="login-field">
            <%= f.email_field :email_confirmation, placeholder: "email confirmation" %>
          </div>
        </div>

        <div class="box-content row">
          <div class="login-field">
            <%= f.text_field :first_name, placeholder: "first name" %>
          </div>
          <div class="login-field">
            <%= f.text_field :last_name, placeholder: "last name" %>
          </div>
        </div>
        
         <%= f.collection_select(:role, User::ROLES, :to_s, lambda { |i| i.to_s.humanize }) %><br>
       
         <div class="login-field">
           Projects: 
            <% @user.projects.each do |project| %>
                 <%= link_to project.name, edit_project_path(project) %>
           <% end %>
           </div>

           <div class="login-field">
           Teams: 
            <% @user.teams.each do |team| %>
               <%= link_to team.name, edit_team_path(team) %>
           <% end %>
           </div>
        
   
        <div class="login-field">
          <%= f.label :birthday %><br />
          <%= f.date_field :birthday %>
        </div>

        <div class="login-field">
          <%= f.label :street_and_nr %><br />
          <%= f.text_field :street_and_nr, :placeholder => "Weg 15" %><br />
          <%= f.label :zip_code %><br />
          <%= f.number_field :zip_code %><br />
          <%= f.label :state %><br />
          <%= f.text_field :state %>
        </div>

        <div class="box-content row">
          <div class="login-field">
            <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
          </div>

          <div class="login-field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
          </div>
        </div>

        <div class="box-content row">
          <div class="login-field input-button">
            <%= f.submit "Save" %>
            <%= link_to "Cancel", :back %>
          </div>
        </div>
    <% end %>
  </div>
</div>