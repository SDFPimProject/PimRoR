<% provide(:title, "Nutzer bearbeiten") %>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %></h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<div class="content-wrapper">
  <div class="content-box">
    <div class="box-header">Nutzer bearbeiten</div>
    <%= form_for(@user, url: user_path, html: {method: :put}) do |f| %>
        <table class="user-new-table">
          <tr>
            <td>
              Name
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name, placeholder: "Vorname" %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :last_name, placeholder: "Nachname" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>
              Email
            </td>
            <td>
              <div class="field">
                <%= f.email_field :email, placeholder: "E-Mail" %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.email_field :email_confirmation, placeholder: "E-Mail bestätigen" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>Password</td>
            <td>
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Passwort" %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Passwort bestätigen" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>Birthdate</td>
            <td colspan="2">
              <div class="field">
                <%= f.date_field :birthday, :placeholder => "Birthdate" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>Street & Housenumber</td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :street_and_nr, :placeholder => "Street & Housenumber" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>zip code</td>
            <td colspan="2">
              <div class="field">
                <%= f.number_field :zip_code, placeholder: "zip code" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>State</td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :state, placeholder: "State" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>Country Name</td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :country_name, placeholder: "Country Name" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>Locality</td>
            <td colspan="2">
              <div class="field">
                <%= f.text_field :locality, placeholder: "Locality" %>
              </div>
            </td>
          </tr>
          <tr>
            <td>Role</td>
            <td><div class="field">
              <%= f.collection_select(:role, User::ROLES, :to_s, lambda { |i| i.to_s.humanize }) %>
            </div></td>
          </tr>
        </table>

        <div class="box-content user-edit-action row">
          <div class="field input-button">
            <%= f.submit "Speichern" %>
          </div>
        </div>
    <% end %>
  </div>
</div>