<div class="dashboard">
  <div class="content-box">
    <div class="box-header"> <%= resource_name.to_s.humanize %></div>
    <%= form_for(resource, as: resource_name, url: update_user_registration_path(resource_name), html: {method: :put}) do |f| %>
        <%= devise_error_messages! %>

        <div class="box-content">
          <div class="login-field">
            <%= f.label :email %>:
            <%= resource.email %>
          </div>

          <div class="login-field">
            <%= f.label :first_name %>:
            <%= resource.first_name %>
          </div>

          <div class="login-field">
            <%= f.label :last_name %>:
            <%= resource.last_name %>
          </div>

           <div class="login-field">
            <%= f.label :role %>:
            <%= resource.role %>
          </div>

           <div class="login-field">
           Projects: 
            <% @user.projects.each do |project| %>
                <%=  project.name %> 
           <% end %>
           </div>

           <div class="login-field">
           Teams: 
            <% @user.teams.each do |teams| %>
                <%=  teams.name %> 
           <% end %>
           </div>

          <div class="login-field">
            <%= f.label :street_and_nr %><br />
            <%= resource.street_and_nr %><br />
          </div>

           <%= f.collection_select(:role, User::ROLES, :to_s, lambda { |i| i.to_s.humanize }) %>

          <div class="login-field">
            <%= f.label :zip_code %><br />
            <%= resource.zip_code %><br />
          </div>
          <div class="login-field">
            <%= f.label :birthday %><br />
            <%= resource.birthday %>
          </div>

          <div class="login-field">
            <%= f.label :state %><br />
            <%= resource.state %><br />
          </div>
          <div class="login-field">
            <%= f.label :country_name %><br />
            <%= f.text_field :country_name %>
          </div>
          <div class="login-field">
            <%= f.label :locality %><br />
            <%= f.text_field :locality %>
          </div>
        </div>

        <div class="box-header">
          Password (leave blank if you don't want to change it)
        </div>

        <div class="box-content row">
          <div class="login-field">
            <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
          </div>

          <div class="login-field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
          </div>
        </div>

        <div class="box-content">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>

        <div class="box-content row">
          <div class="login-field input-button">
            <%= f.submit "Update" %>
          </div>
          <%= link_to :back do %>
              <div class="login-field button">
                back
              </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>



