<h1>Editing Project</h1>

<%= form_for(@project, url: project_path, html: { method: :put }) do |f| %>
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="actions">
        <%= f.submit "Save" %>
    </div>
<% end %>

<%= Project.human_attribute_name("users") %><br />
<% @project_users.each do |a| %>
    <%= form_for(a) do |ff| %>
        <p>
            <%= User.find(a.user_id).email %>
            <%= ff.collection_select(:user_project_role, UsersProject::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>
            <%= link_to 'Remove',  project_remove_user_path(@project, a.user_id),  method: :post %>
        </p>
        <div class="actions">
            <%= ff.submit "Save" %>
        </div>
    <% end %>
<% end %>
<%= will_paginate @project_users, :param_name => 'projectUserPage' %>

    

